<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Pokidex.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Pokidex"
    xmlns:views="clr-namespace:Pokidex.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Pokidex">

    <ShellContent
        Title="Log In"
        ContentTemplate="{DataTemplate views:LogInView}"
        Route="LogIn" />

    <ShellContent
        Title="Sign Up"
        ContentTemplate="{DataTemplate views:SignUpView}"
        Route="SignUp" />

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:PokemonList}"
        Route="PokemonList" />

</Shell>
